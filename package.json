{
    "name": "portfolio",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "prettier:js": "./node_modules/.bin/prettier --config .prettierrc --write *.{js, jsx}",
        "prettier:tsx": "./node_modules/.bin/prettier --config .prettierrc --write *.{tsx, ts}",
        "prettier:json": "./node_modules/.bin/prettier --config .prettierrc  --write *.json",
        "prettier:md": "./node_modules/.bin/prettier --config .prettierrc --print-width 80 --write **/*.{md, mdx}",
        "stylelint:css": "./node_modules/.bin/stylelint '**/*.{tsx, ts}'",
        "tslint": "eslint --fix",
        "prettify:dts": "./node_modules/.bin/prettier --config .prettierrc --write src/**/*.d.ts",
        "prettify:types": "./node_modules/.bin/prettier --config .prettierrc --write src/**/types.d.ts",
        "prettify:ts": "./node_modules/.bin/prettier --config .prettierrc --write src/**/*.ts"
    },
    "dependencies": {
        "axios": "^0.19.0",
        "fontfaceobserver": "^2.1.0",
        "history": "^4.10.1",
        "immer": "^5.3.6",
        "next": "9.5.1",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "styled-components": "^5.0.1",
        "typesafe-actions": "^2.0.4",
        "uuid": "^3.3.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{tsx, ts}": [
            "yarn run prettier:tsx",
            "yarn run tslint",
            "yarn run stylelint:css",
            "git add"
        ],
        "*.json": ["yarn run prettier:json", "git add"],
        "*.{md, mdx}": ["yarn run prettier:md", "git add"],
        "*.{jsx, js}": ["yarn run prettier:js", "git add"]
    },
    "browserslist": [">0.2%", "not dead", "not ie <= 11", "not op_mini all"],
    "devDependencies": {
        "@types/compression": "^0.0.36",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.4",
        "@types/fontfaceobserver": "^0.0.6",
        "@types/history": "^4.7.3",
        "@types/jest": "23.3.10",
        "@types/lodash": "^4.14.149",
        "@types/node": "^14.0.27",
        "@types/nodemailer": "^4.6.8",
        "@types/react": "^16.9.44",
        "@types/react-content-loader": "^3.1.3",
        "@types/react-dom": "16.0.11",
        "@types/react-helmet": "^5.0.11",
        "@types/react-router": "^5.1.5",
        "@types/react-router-dom": "^4.3.5",
        "@types/react-test-renderer": "^16.9.0",
        "@types/redux-devtools": "^3.0.47",
        "@types/redux-form": "^7.5.3",
        "@types/styled-components": "^5.0.1",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-config-prettier-standard": "^2.0.0",
        "eslint-config-react": "^1.1.7",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react-hooks": "^2.5.1",
        "eslint-plugin-redux-saga": "^0.10.0",
        "eslint-plugin-standard": "^4.0.1",
        "http-proxy-middleware": "^0.19.0",
        "husky": "^1.2.1",
        "lint-staged": "^8.2.1",
        "node-plop": "^0.17.4",
        "prettier": "^1.19.1",
        "prettier-stylelint": "^0.4.2",
        "react-testing-library": "^5.9.0",
        "stylelint": "^9.8.0",
        "stylelint-config-recommended": "^2.2.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-order": "^1.0.0",
        "stylelint-processor-styled-components": "^1.8.0",
        "tslint": "^5.20.0",
        "tslint-config-airbnb": "^5.11.2",
        "tslint-config-prettier": "^1.18.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-react": "^3.6.0",
        "tslint-react-a11y": "^1.0.0",
        "typescript": "^3.9.7",
        "typescript-styled-plugin": "^0.13.0"
    }
}
